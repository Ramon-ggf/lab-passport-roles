<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            {{#if isBoss}}
            <h1>Registro de personal</h1>
            {{else}}
            <h1>Registrar usuario</h1>
            {{/if}}

            <form action="/signup" method="POST">
                <div class='form-group'>
                    <label for='username'>Nombre de usuario</label>
                    <input name='username' type='text' class='form-control' placeholder='nombre de usuario'
                        id='username'>
                </div>
                
                <div class='form-group'>
                    <label for='password'>Contrase√±a</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'>
                </div>

                <div class='form-group'>
                    <label for='username'>Nombre</label>
                    <input name='name' type='text' class='form-control' placeholder='nombre'
                        id='name'>
                </div>
                {{#if isBoss}}
                <div class='form-group'>
                    <label for='username'>Rol</label>
                    <input name='role' type='text' class='form-control' placeholder='rol'
                        id='role'>
                </div>
                {{/if}}

                <button type='submit' class='btn btn-dark btn-block'>Registrarme</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background: rgba(255, 0, 0, .4); color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
            </form>

        </div>
    </div>
</div>
